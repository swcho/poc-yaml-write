{
    // IntelliSense를 사용하여 가능한 특성에 대해 알아보세요.
    // 기존 특성에 대한 설명을 보려면 가리킵니다.
    // 자세한 내용을 보려면 https://go.microsoft.com/fwlink/?linkid=830387을(를) 방문하세요.
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch current file w/ ts-node",
            "protocol": "inspector",
            "args": [
                "${relativeFile}"
            ],
            "cwd": "${workspaceRoot}",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "env": {
                "TS_NODE_PROJECT": "tsconfig.json"
            },
            "cwd": "${workspaceRoot}",
            "args": [
                "-u",
                "tdd",
                "-r",
                "ts-node/register",
                "--timeout",
                "999999",
                "--grep",
                "ast parser test",
                "--colors",
                "test/*.test.ts"
            ],
            "sourceMaps": true,
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}